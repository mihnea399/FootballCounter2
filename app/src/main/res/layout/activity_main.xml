<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.android.footballcounter.MainActivity">


    <ImageView

        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/stjames" />

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView

                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/newcastle1" />

            <TextView

                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="newcastle"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="25sp"/>

            <TextView

                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/newcastle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="40sp" />

            <Button

                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ScoreN"
                android:text="goal"
               />

            <TextView

                android:id="@+id/foulN"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="35sp"
                android:layout_gravity="center_horizontal"
                />

            <Button

                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="foul"
                android:onClick="FoulN"/>

            <TextView

                android:id="@+id/saveN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="0"
                android:textSize="35sp"
                android:layout_gravity="center_horizontal"/>

            <Button

                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="save"
                android:onClick="SaveN"/>





        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView


                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/download3" />

            <TextView

                android:singleLine="true"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sunderland"
                android:textSize="25sp"
                android:textColor="#ed1212"
                android:layout_gravity="center_horizontal" />

            <TextView

                android:textColor="#ed1212"
                android:layout_gravity="center_horizontal"
                android:id="@+id/sunderland"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="40sp"/>

            <Button

                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="ScoreS"
                android:text="goal"/>

            <TextView

                android:id="@+id/foulS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="35sp"
                android:textColor="#ed1212"
                android:layout_gravity="center_horizontal"/>

            <Button

                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="foul"
                android:onClick="FoulS"/>

            <TextView

                android:id="@+id/saveS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="35sp"
                android:textColor="#ed1212"
                android:layout_gravity="center_horizontal"/>

            <Button

                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="save"
                android:onClick="SaveS"/>



        </LinearLayout>

    </LinearLayout>



    <Button

        android:layout_above="@id/reset"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Win"
        android:onClick="Win"
        />

<Button

    android:id="@+id/reset"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="reset"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:onClick="resetAll"/>

</RelativeLayout>



